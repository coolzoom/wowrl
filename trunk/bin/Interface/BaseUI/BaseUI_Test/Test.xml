<Ui>
    <!Script file="Test.lua"/>
    
    <Frame name="Template_Child" virtual="true">
        <Anchors>
            <Anchor point="TOPLEFT" relativeTo="$parent_Pin" relativePoint="TOPLEFT"/>
            <Anchor point="BOTTOMRIGHT" relativeTo="$parent_Pin" relativePoint="BOTTOMRIGHT"/>
        </Anchors>
        <Frames>
            <Frame name="$parent_Child">
                <Size>
                    <AbsDimension x="20" y="20"/>
                </Size>
                <Anchors>
                    <Anchor point="CENTER"/>
                </Anchors>
            </Frame>
        </Frames>
    </Frame>
    
    <Frame name="Test" parent="UIParent" hidden="false" movable="true" enableMouse="true" clampedToScreen="true">
        <Size>
            <AbsDimension x="400" y="400"/>
        </Size>
        <Anchors>
            <Anchor point="TOPLEFT" relativeTo="UIParent" relativePoint="TOPLEFT"/>
        </Anchors>
        <Frames>
            <Frame name="$parent_Pin">
                <Size>
                    <AbsDimension x="50" y="50"/>
                </Size>
                <Anchors>
                    <Anchor point="CENTER"/>
                </Anchors>
                <Layers>
                    <Layer>
                        <Texture name="$parent_Texture" file="Textures/UI/UI-CloseButton-Up.png" setAllPoints="true">
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>
        <Layers>
            <Layer>
                <Texture name="$parent_Texture" setAllPoints="true">
                    <Gradient orientation="HORIZONTAL">
                        <MinColor r="1" g="0" b="0"/>
                        <MaxColor r="0" g="0" b="1"/>
                    </Gradient>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad>
                Test_Pin_Texture:SetDesaturated(true);
            </OnLoad>
        </Scripts>
    </Frame>
</Ui>
