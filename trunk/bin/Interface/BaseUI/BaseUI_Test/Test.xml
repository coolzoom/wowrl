<Ui>
    <!Script file="Test.lua"/>
    
    <Frame name="Template_Child" virtual="true">
        <Anchors>
            <Anchor point="TOPLEFT" relativeTo="$parent_Pin" relativePoint="TOPLEFT"/>
            <Anchor point="BOTTOMRIGHT" relativeTo="$parent_Pin" relativePoint="BOTTOMRIGHT"/>
        </Anchors>
        <Frames>
            <Frame name="$parent_Child">
                <Size>
                    <AbsDimension x="20" y="20"/>
                </Size>
                <Anchors>
                    <Anchor point="CENTER"/>
                </Anchors>
            </Frame>
        </Frames>
    </Frame>
    
    <Frame name="Test" parent="UIParent" hidden="false" movable="true" enableMouse="true" clampedToScreen="true">
        <Size>
            <AbsDimension x="400" y="400"/>
        </Size>
        <Anchors>
            <Anchor point="TOPLEFT" relativeTo="UIParent" relativePoint="TOPLEFT"/>
        </Anchors>
        <Backdrop bgFile="Interface/BaseUI/BaseUI_Test/UI-DialogBox-Background.png" edgeFile="Interface/BaseUI/BaseUI_Test/UI-DialogBox-Border.png" tile="true">
            <BackgroundInsets>
                <AbsInset left="8" right="8" top="8" bottom="8"/>
            </BackgroundInsets>
        </Backdrop>
        <!Frames>
            <Frame name="$parent_Pin">
                <Size>
                    <AbsDimension x="50" y="50"/>
                </Size>
                <Anchors>
                    <Anchor point="CENTER"/>
                </Anchors>
                <Layers>
                    <Layer>
                        <Texture name="$parent_Texture" file="Textures/UI/UI-CloseButton-Up.png" setAllPoints="true">
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>
        <!Layers>
            <Layer>
                <Texture name="$parent_Texture" setAllPoints="true">
                    <Gradient orientation="HORIZONTAL">
                        <MinColor r="1" g="0" b="0"/>
                        <MaxColor r="0" g="0" b="1"/>
                    </Gradient>
                </Texture>
            </Layer>
            <Layer level="HIGHLIGHT">
                <FontString name="$parent_Text1" font="Fonts/Calibri.ttf" fontHeight="16" justifyH="LEFT" text="Bonjour a tous, ici John Connor. Je vous previens que la Terre va bientot exploser, que vous le vouliez ou non... Pour l'empecher, verifiez que ce TextBox marche correctement.">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="RIGHT"/>
                        <Anchor point="TOPRIGHT" relativePoint="RIGHT">
                            <Offset>
                                <AbsDimension x="200"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <Color r="0" g="1" b="0"/>
                </FontString>
            </Layer>
        </Layers>
        <!Scripts>
            <OnLoad>
                Test_Pin_Texture:SetDesaturated(true);
            </OnLoad>
        </Scripts>
    </Frame>
</Ui>
