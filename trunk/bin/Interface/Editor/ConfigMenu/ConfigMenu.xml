<Ui>
    <Frame name="ConfigMenu" parent="UIParent" inherits="FrameTemplate_Dialog" hidden="true">
        <Size>
            <AbsDimension x="400" y="400"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Scripts>
            <OnLoad>
                base:OnLoad();
                this.Title.TitleString:SetText(AddOns.ConfigMenu:GetLocalizedString("Title"));
            </OnLoad>
        </Scripts>
        <Frames>
            <Frame name="$parentHorizontalBorderLeft" topLevel="true">
                <Size>
                    <AbsDimension y="2"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="16" y="48"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Backdrop>
                    <BackgroundColor r="1" g="1" b="1"/>
                </Backdrop>
            </Frame>
            <Frame name="$parentHorizontalBorderRight" topLevel="true">
                <Size>
                    <AbsDimension y="2"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-16" y="48"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Backdrop>
                    <BackgroundColor r="1" g="1" b="1"/>
                </Backdrop>
            </Frame>
        </Frames>
    </Frame>
</Ui>
