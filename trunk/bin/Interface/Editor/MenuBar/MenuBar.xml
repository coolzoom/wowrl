<Ui>
	<Frame name="MenuBar" parent="UIParent" clampedToScreen="true">
		<Size>
			<AbsDimension y="16"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT"/>
            <Anchor point="TOPRIGHT"/>
		</Anchors>
        <Scripts>
            <OnLoad>
                this.activeDropDown = nil;
                this:SetBackdrop({});
                this:SetBackdropColor(MenuBar.Config.barColor.r, MenuBar.Config.barColor.g, MenuBar.Config.barColor.b, MenuBar.Config.barColor.a);
            </OnLoad>
        </Scripts>
        <Frames>
            <Button name="$parentCloseButton" inherits="ButtonTemplate_Menu" text="X">
                <Size>
                    <AbsDimension x="16" y="16"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset>
                            <AbsDimension y="1"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        Exit();
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
	</Frame>
</Ui>
