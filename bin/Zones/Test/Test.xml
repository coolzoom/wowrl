    <Lights>
        <Point name="Torch">
            <Position x="0" y="0" z="5"/>
            <Diffuse r="150" g="100" b="0"/>
            <Specular r="150" g="100" b="0"/>
            <Attenuation constant="0.0f" linear="1.0" quadratic="0.0"/>
        </Point>
        <Directional name="Sun">
            <Direction x="2" y="2" z="-5"/>
            <Diffuse r="0" g="150" b="0"/>
            <Specular r="0" g="150" b="0"/>
        </Directional>
        <Spot name="Projector">
            <Position x="-5" y="-5" z="3"/>
            <Direction x="5" y="5" z="0"/>
            <Diffuse r="0" g="0" b="150"/>
            <Specular r="0" g="0" b="150"/>
            <Dimensions inAngle="0.1" outAngle="0.125"/>
            <Fallof val="1.0"/>
            <Attenuation constant="0.0f" linear="1.0" quadratic="0.0"/>
        </Spot>
    </Lights>
    
</Zone>