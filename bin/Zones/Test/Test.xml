<Zone name="Test">

    <Models>
        <Model name="Barrel" file="barrel.m2">
            <Texture>
                <Diffuse file="barrel.jpg"/>
            </Texture>
        </Model>
    </Models>
    
    <Sky>
        <Model model="sky.m2"/>
    </Sky>
    
    <Terrain>
        <HeightMap file="height_map.png"/>
            <MinHeight val="0"/>
            <MaxHeight val="5"/>
        </HeightMap>
        <Dimensions x="20" y="20"/>
        <SubDivisions nx="30" ny="30"/>
        <Textures>
            <Diffuse file="grass.jpg">
                <Tilling nx="1" ny="1"/>
            </Diffuse>
            <Specular file="grass_s.jpg">
                <Tilling nx="1" ny="1"/>
            </Specular>
        </Textures>
    </Terrain>
    
    <Doodads>
        <Doodad name="Barrel" model="Barrel" static="true">
            <Position x="0" y="0" z="0"/>
            <Scale x="1" y="1" z="1"/>
            <Orientation x="0" y="0" z="0" w="1"/>
            <SelfLighting r="0" g="0" b="0"/>
        </Doodad>
    </Doodads>
    
    <AmbientColor r="100" g="100" b="100"/>
    
    <Fog>
        <Color r="0" g="0" b="0"/>
        <Distance min="50" max="80"/>
