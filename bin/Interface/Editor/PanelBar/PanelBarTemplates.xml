<Ui>
    <Frame name="FrameTemplate_Panel" virtual="true" hidden="true">
        <Anchors>
            <Anchor point="LEFT" relativePoint="RIGHT"/>
            <Anchor point="TOP" relativePoint="TOP"/>
            <Anchor point="BOTTOM" relativePoint="BOTTOM"/>
        </Anchors>
        <Scripts>
            <OnLoad>
                this:SetBackdrop({{["top"] = 3}});
                this:SetBackdropColor(PanelBar.Config.panelColor.r, PanelBar.Config.panelColor.g, PanelBar.Config.panelColor.b, PanelBar.Config.panelColor.a);
            </OnLoad>
        </Scripts>
        <Frames>
            <Frame name="$parentContent">
                <Anchors>
                    <Anchor point="LEFT">
                        <Offset>
                            <AbsDimension x="5"/>
                        </Offset>
                    </Anchor>
                    <Anchor point="RIGHT">
                        <Offset>
                            <AbsDimension x="-5"/>
                        </Offset>
                    </Anchor>
                    <Anchor point="TOP" relativeTo="$parentTitle" relativePoint="BOTTOM">
                        <Offset>
                            <AbsDimension y="5"/>
                        </Offset>
                    </Anchor>
                    <Anchor point="BOTTOM">
                        <Offset>
                            <AbsDimension y="-5"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Backdrop edgeFile="Interface/Editor/Templates/Border2PX.png">
                    <BackgroundColor a="0.2" r="1" g="1" b="1"/>
                </Backdrop>
            </Frame>
        </Frames>
        <Layers>
            <Layer>
                <FontString name="$parentTitle" fontHeight="10" font="Fonts/VeraBold.ttf">
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension y="8"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <Color r="1" g="1" b="1"/>
                    <!Shadow>
                        <Offset x="1" y="1"/>
                    </Shadow>
                </FontString>
            </Layer>
        </Layers>
    </Frame>
    
    <Button name="ButtonTemplate_PanelHeader" virtual="true">
        <Size>
            <AbsDimension x="45" y="52"/>
        </Size>
        <HitRectInsets>
            <AbsInset left="3" right="3" top="3" bottom="3"/>
        </HitRectInsets>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentBackground" file="Interface/Editor/PanelBar/PanelHeaderBackground.png">
                    <Size>
                        <AbsDimension x="64" y="64"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPRIGHT"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="BORDER">
                <Texture name="$parentBorder" file="Interface/Editor/PanelBar/PanelHeaderBorder.png">
                    <Size>
                        <AbsDimension x="64" y="64"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPRIGHT"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnClick>
                if (PanelBar.currentPanel) then
                    if (PanelBar.currentPanel == this.panel) then
                        PanelBar.currentPanel:Hide();
                        PanelBar.currentPanel.header.Thumbnail:SetDesaturated(true);
                        PanelBar.currentPanel = nil;
                        PanelBar:SetPoint("RIGHT", UIParent, "RIGHT");
                    else
                        PanelBar.currentPanel:Hide();
                        PanelBar.currentPanel.header.Thumbnail:SetDesaturated(true);
                        PanelBar.currentPanel = this.panel;
                        PanelBar.currentPanel:Show();
                        PanelBar.currentPanel.header.Thumbnail:SetDesaturated(false);
                    end
                else
                    PanelBar.currentPanel = this.panel;
                    PanelBar:SetPoint("RIGHT", UIParent, "RIGHT", -PanelBar.Config.panelWidth);
                    PanelBar.currentPanel:Show();
                end
                PanelBar:UpdateVerticalBorder();
            </OnClick>
            <OnEnter>
                if (PanelBar.currentPanel and PanelBar.currentPanel ~= this.panel) then
                    this.Thumbnail:SetDesaturated(false);
                else
                    this.Thumbnail:SetDesaturated(false);
                end
            </OnEnter>
            <OnLeave>
                if (PanelBar.currentPanel ~= this.panel) then
                    this.Thumbnail:SetDesaturated(true);
                end
            </OnLeave>
        </Scripts>
    </Button>
</Ui>
