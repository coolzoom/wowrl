<Ui>
    <Frame name="Editor">
        <Scripts>
            <OnLoad>
                this:RegisterEvent("ADDON_LOADED");
            </OnLoad>
            <OnEvent>
                if (event == "ADDON_LOADED") then
                    Frost:SetBackgroundColor(AddOns.Editor.Config.worldBackgroundColor:Unpack());
                    AddOns.Editor:EnableMouseDecal(true);
                end
            </OnEvent>
        </Scripts>
    </Frame>
</Ui>