<Ui>
    <Button name="ButtonTemplate_Menu" virtual="true">
        <NormalText font="Fonts/Vera.ttf" fontHeight="8" setAllPoints="false">
            <Anchors>
                <Anchor point="CENTER">
                    <Offset>
                        <AbsDimension y="1"/>
                    </Offset>
                </Anchor>
            </Anchors>
            <Color r="1" g="1" b="1"/>
        </NormalText>
        <HighlightTexture file="Interface/Editor/Templates/ButtonHighlight.png"/>
        <Scripts>
            <OnLoad>
                this:SetWidth(math.max(this:GetTextWidth(), 10)+16);
            </OnLoad>
            <OnClick>
                if (UIParent.activeDropdown) then
                    if (UIParent.activeDropdown ~= this.Dropdown) then
                        UIParent.activeDropdown:Hide();
                        UIParent.activeDropdown = this.Dropdown;
                        this.Dropdown:Show();
                    else
                        UIParent.activeDropdown = nil;
                        this.Dropdown:Hide();
                    end
                else
                    this.Dropdown:Show();
                    UIParent.activeDropdown = this.Dropdown;
                end
            </OnClick>
        </Scripts>
    </Button>
    
    <Button name="ButtonTemplate_MenuItem" virtual="true">
        <NormalText font="Fonts/Vera.ttf" fontHeight="8" justifyH="LEFT" setAllPoints="false">
            <Anchors>
                <Anchor point="TOPLEFT">
                    <Offset>
                        <AbsDimension x="16"/>
                    </Offset>
                </Anchor>
                <Anchor point="BOTTOMRIGHT"/>
            </Anchors>
            <Color r="1" g="1" b="1"/>
        </NormalText>
        <HighlightTexture file="Interface/Editor/Templates/ButtonHighlight.png"/>
    </Button>
    
    <CheckButton name="CheckButtonTemplate_MenuCheckItem" inherits="ButtonTemplate_MenuItem" virtual="true">
        <CheckedTexture file="Interface/Editor/Templates/CheckButtonChecked.png">
            <Size>
                <AbsDimension x="8" y="8"/>
            </Size>
            <Anchors>
                <Anchor point="TOPLEFT">
                    <Offset>
                        <AbsDimension x="4" y="3"/>
                    </Offset>
                </Anchor>
            </Anchors>
        </CheckedTexture>
        <Layers>
            <Layer>
                <Texture name="$parentBackground" file="Interface/Editor/Templates/CheckButtonBackground.png">
                    <Size>
                        <AbsDimension x="8" y="8"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="4" y="3"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
    </CheckButton>
</Ui>