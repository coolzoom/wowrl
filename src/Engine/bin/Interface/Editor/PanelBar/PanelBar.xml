<Ui>
    <Frame name="PanelBar" parent="UIParent">
        <Size>
            <AbsDimension x="32"/>
        </Size>
        <Anchors>
            <Anchor point="TOP" relativeTo="MenuBar" relativePoint="BOTTOM"/>
            <Anchor point="BOTTOM"/>
            <Anchor point="RIGHT"/>
        </Anchors>
        <Frames>
            <Frame name="$parentBorders" setAllPoints="true">
                <Frames>
                    <Frame name="$parentVerticalTop" hidden="true">
                        <Size>
                            <AbsDimension x="3"/>
                        </Size>
                        <Anchors>
                            <Anchor point="RIGHT"/>
                            <Anchor point="TOP"/>
                        </Anchors>
                        <Backdrop>
                            <BackgroundColor r="1" g="1" b="1"/>
                        </Backdrop>
                    </Frame>
                    <Frame name="$parentVerticalBottom">
                        <Size>
                            <AbsDimension x="3"/>
                        </Size>
                        <Anchors>
                            <Anchor point="RIGHT"/>
                            <Anchor point="BOTTOM"/>
                        </Anchors>
                        <Backdrop>
                            <BackgroundColor r="1" g="1" b="1"/>
                        </Backdrop>
                        <Scripts>
                            <OnLoad>
                                this:SetPoint("TOP", PanelBar, "TOP");
                            </OnLoad>
                        </Scripts>
                    </Frame>
                    <Frame name="$parentHorizontal">
                        <Size>
                            <AbsDimension y="3"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativePoint="TOPRIGHT"/>
                        </Anchors>
                        <Backdrop>
                            <BackgroundColor r="1" g="1" b="1"/>
                        </Backdrop>
                        <Scripts>
                            <OnLoad>
                                this:SetWidth(AddOns.PanelBar.Config.panelWidth);
                            </OnLoad>
                        </Scripts>
                    </Frame>
                </Frames>
            </Frame>
        </Frames>
    </Frame>
</Ui>
